@model WebApplication1.Models.Customer
@using WebApplication1.Data
@inject ApplicationDbContext DB;
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <h1>Lista e librave te huazuara</h1>
    <table>

        @foreach (var item in @ViewBag.booksBorrowedListView)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    @*@item.Author.Name*@
                    @{
                        if (item.Author == null)
                        {
                            continue;
                        }
                        else
                        {
                            <text>@item.Author.Name</text>
                        }
                       
                    }

                </td>

            </tr>
        }
    </table>






</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CustomerId">Edit</a> |
    <a asp-action="Index" class="back-to-list">Back to List</a>
</div>
<style>
    body {
        color: #BC8F8F;
    }

    h1 {
        color: #BC8F8F;
        font-size: 40px;
        text-transform: uppercase;
    }

    h4 {
        color: #BC8F8F;
        font-size: 30px;
        text-transform: uppercase;
    }

    .form-group .btn btn-primary {
        color: white;
        background-color: #BC8F8F;
    }

    .back-to-list {
        color: #BC8F8F;
    }
</style>